{
  "name": "futureatoms-website",
  "version": "1.0.0",
  "description": "FutureAtoms - Building Tomorrow's Technology",
  "author": "Abhilash Chadhar",
  "license": "MIT",
  "scripts": {
    "serve": "firebase serve",
    "predeploy": "git lfs pull && node scripts/verify-lfs.js",
    "deploy": "firebase deploy",
    "deploy:hosting": "npm run predeploy && firebase deploy --only hosting",
    "init": "firebase init",
    "build": "echo 'No build required for static site'",
    "build:info": "node scripts/inject-build-info.js",
    "start": "python3 -m http.server 8000 -d public",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:security": "npm audit",
    "test:a11y": "pa11y-ci",
    "test:html": "html-validate 'public/*.html' 'public/app/index.html' 'public/admin/index.html'",
    "test:quality": "lighthouse",
    "scan:all": "node scripts/scan-all.js",
    "start:server": "node server.js",
    "ingest": "node scripts/ingest.js",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "fix:social-meta": "node scripts/fix-social-meta.js",
    "inject:schema": "node scripts/inject-structured-data.js",
    "inject:analytics": "node scripts/inject-analytics.js",
    "validate:seo": "node scripts/validate-seo.js",
    "report:seo": "node scripts/generate-seo-report.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "broken-link-checker": "^0.7.8",
    "concurrently": "^9.2.1",
    "critical": "^7.2.1",
    "eslint": "^9.39.2",
    "firebase-tools": "^13.0.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^10.5.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "purgecss": "^7.0.2",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.18",
    "terser": "^5.44.1",
    "w3c-html-validator": "^2.1.0",
    "wait-on": "^9.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/futureatoms-website.git"
  },
  "keywords": [
    "futureatoms",
    "ai",
    "music",
    "bevybeats",
    "savitri",
    "zaphy",
    "chipos",
    "technology"
  ],
  "dependencies": {
    "@google/genai": "^1.30.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "glob": "^13.0.0",
    "node-fetch": "^3.3.2"
  }
}
